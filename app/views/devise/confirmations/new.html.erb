<div class="container">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6 col-xs-12">
            <div class="well">
                <center><h3 class="negrita" style="padding-bottom:0.5em">Confirmación de cuenta</h3></center>
                <div class="container-fluid">
                  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="col-xs-12 col-md-8"><%= f.label "Email" %></div>
                    </div>
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="col-xs-12 col-md-8"><%= f.email_field :email, autofocus: true , class:"form-control" %></div>
                    </div>
                    <div class="row" style="padding-top:1em">
                      <div class="col-md-2"></div>
                      <center><div class="col-xs-12 col-md-8"><%= f.submit "Reenviar instrucciones de confirmación" , class:"btn btn-success negrita" %></div></center>
                    </div>
                    <% end %>
                    <div class="row" style="padding-top:1em">
                      <div class="col-md-2"></div>
                      <div class="col-xs-12 col-md-8"><%= render "devise/shared/links" %></div>
                    </div>
                </div>
            </div>
      </div>
    </div>
</div>