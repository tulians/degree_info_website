<% devise_error_messages! %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="well">
        <div class="container-fluid">
          <center><h3 class="negrita">Crear una cuenta</h3></center>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.label "Nombre" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.text_field :name, autofocus: true , class:"form-control", :required => "required" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.label "Apellido" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.text_field :surname, autocomplete: true , class:"form-control", :required => "required" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.label "Email" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.email_field :email, autocomplete: true , class:"form-control", :required => "required" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>

                <div class="col-xs-12 col-md-10"><%= f.label "Contraseña" %><i>(<%= @minimum_password_length %> caracteres mínimo)</i></div>

            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.password_field :password, autocomplete: "off" , class:"form-control", :required => "required" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.label "Confirmación_de_contraseña" %></div>
            </div>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", :required => "required" %></div>
            </div>
            <div class="row" style="padding-top:1em">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><span class="error">* Todos los campos son obligatorios</span></div>
            </div>
            <center>
              <div class="row" style="padding-top:1em">
                <div class="col-md-1"></div>
                <!--<div class="col-xs-12 col-md-10 form-group"><input type="checkbox" id="terms"/> <span class="destacado">Acepto los términos y condiciones de uso</span></div>-->
                <div class="col-xs-12 col-md-10">Seleccionando la opción <span class="negrita">Registrarse</span> acepta los <a href="/terms" target="black" class="destacado">Términos y Condiciones de Uso</a>.</div>
              </div>
              <div class="row" style="padding-top:1em">
                <div class="col-md-1"></div>
                <div class="col-xs-12 col-md-10 form-group"><%= f.submit "Registrarse", class:"btn btn-primary negrita", id:"registration-submit" %></div>
              </div>
            </center>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-xs-12 col-md-10"><%= render "devise/shared/links" %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>