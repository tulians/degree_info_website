<% devise_error_messages! %>

<div class="container">
    <div class="row">
        <div class=></div>
      <div class="col-md-3 col-xs-3">
      </div>
      <div class="col-md-6 col-xs-6">
            <div class="well">
              <div class="container-fluid">
                <center><h3 class="negrita">Crear una cuenta</h3></center>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.label "Nombre" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.text_field :name, autofocus: true , class:"form-control", :required => "required" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.label "Apellido" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.text_field :surname, autocomplete: true , class:"form-control", :required => "required" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.label "Email" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.email_field :email, autocomplete: true , class:"form-control", :required => "required" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <% if @validatable %>
                      <div class="col-xs-10 col-md-10"><%= f.label "Contraseña" %><i>(<%= @minimum_password_length %> caracteres mínimo)</i></div>
                    <% end %>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.password_field :password, autocomplete: "off" , class:"form-control", :required => "required" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.label "Confirmación_de_contraseña" %></div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", :required => "required" %></div>
                  </div>
                  <div class="row" style="padding-top:1em">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><span class="error">Todos los campos son obligatorios</span></div>
                  </div>
                  <center>
                    <div class="row" style="padding-top:1em">
                      <div class="col-xs-1 col-md-1"></div>
                      <div class="col-xs-10 col-md-10 form-group"><%= f.submit "Registrarse", class:"btn btn-primary btn-sm" %></div>
                    </div>
                  </center>
                  <div class="row">
                    <div class="col-xs-1 col-md-1"></div>
                    <div class="col-xs-10 col-md-10"><%= render "devise/shared/links" %></div>
                  </div>
                </div>
                <% end %>
            </div>
      </div>
    </div>
</div>