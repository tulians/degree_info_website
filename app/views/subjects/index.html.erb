<h1>Listado de materias</h1>

<% @subjects.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |subject| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(subject.picture_url), subject, :size => "240x150", width: '80%' if subject.picture.present?%>
          <div class="caption">
            <h3 class = "panel-title text-ellipsis"><%= link_to subject.name, subject %></h3>
            <%= subject.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

