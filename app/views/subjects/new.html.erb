<h2 class="subtitles">Nueva materia</h2>
<div class="container-fluid">
	<%= form_for(@subject) do |f| %>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Nombre" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.text_field :name, autofocus: true, class:"form-control" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Descripción" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.text_area :description, class:"form-control", maxlength:"5000" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Código" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.text_field :code, autocomplete: "off", class:"form-control" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Año" %></div>
		</div>
		<div class="row">
			<div class="col-xs-3 col-md-3"></div>
			<div class="col-xs-6 col-md-6"><%= f.text_field :year, autocomplete: "off", class:"form-control" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Orden" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.text_field :int_ord, autocomplete: "off", class:"form-control" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.label "Imagen representativa" %></div>
		</div>
		<div class="row">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.file_field :picture, class:"form-control" %></div>
		</div>
		<div class="row" style="padding-top:1em">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= f.submit "Publicar", class:"btn btn-primary btn-sm" %></div>
		</div>
		<div class="row" style="padding-top:1em">
		  <div class="col-xs-3 col-md-3"></div>
		  <div class="col-xs-6 col-md-6"><%= link_to 'Volver al listado de materias', subjects_path %></div>
		</div>
